{
	"files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true
  },
	//----------------------------------------------------//
	// Editor settings like fonts and rulers.
	//----------------------------------------------------//
	// Tab space for different languages
	"[python]": {
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.tabSize": 2
	},
	"[systemverilog]": {
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.tabSize": 2
	},
	"[typescript]": {
		"editor.tabSize": 2
	},
	"[rust]": {
		"editor.tabSize": 2
	},
	// Default tabsize
	"editor.tabSize": 2,
	// insert spaces when pressing Tab
	"editor.insertSpaces": true,
	"editor.largeFileOptimizations": false,
	// By default the starting font will be set or also try wrapping them in single qoutes to set
	// "editor.fontFamily": "'UbuntuSansMono NF', 'DM Mono', JuliaMono, 'JetBrainsMono Nerd Font', monospace",
	"editor.fontFamily": "'JetBrainsMono Nerd Font', monospace",
	// Set font size
	"editor.fontSize": 12, // Font Size
	// Set font boldness with normal or bold or some number
	// "editor.fontWeight": "normal", // Font Weight
	// "editor.fontWeight": "bold", // Font Weight
	// "editor.fontWeight": "400", // Font Weight -- Can use other numbers from 200 to 800
	"editor.fontWeight": "550", // Font Weight -- Can use other numbers from 200 to 800
	// "editor.fontWeight": "100", // Font Weight -- Can use other numbers from 200 to 800
	// Set letter spacing
  "editor.letterSpacing": 1.3,
	// "editor.letterSpacing": 1,
	"editor.lineHeight": 1.7, // Line height for the editor Characters.
	// Enable/Disable ligatures -- https://github.com/githubnext/monaspace#coding-ligatures
	// "editor.fontLigatures": true, // Font ligatures
	// "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
	"editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
	// Enable smooth scrolling in the editor
	"editor.smoothScrolling": true,
	"editor.foldingMaximumRegions": 65000,
	// Add vertical rulers to the texteditor window with colors
	"editor.rulers": [
		{
			"column": 100,
			"color": "#4ad17740"
		}, // extra right rule
		{
			"column": 110,
			"color": "#ff4081"
		} // extra right rule
	],
	// Customization for Kewords, comments itallic style. VScode do not support automatic itallic.
	// Further information can be found at below link.
	// https://thomasventurini.com/articles/setup-firacodeiscript-for-italic-fonts-in-vscode/
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					"punctuation.definition.comment",
					"comment"
				],
				"settings": {
					// "foreground": "#0578fc",
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					//following will be in italic (=FlottFlott)
					"entity.name.type.class", //class names
					"keyword", //import, export, returnâ€¦
					"storage.modifier", //static keyword
					"storage.type", //class keyword
					"support.class.builtin",
					"keyword.control",
					"constant.language",
					"entity.other.attribute-name",
					"entity.name.method"
					//make those value bold
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					//following will be excluded from italics (VSCode has some defaults for italics)
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	//----------------------------------------------------//
	// VSCode Terminal Settings like fonts and themes.
	//----------------------------------------------------//
	// Scrollback history of temminal.
	"terminal.integrated.scrollback": 100000,
	// By default the starting font will be set or also try wrapping them in single qoutes to set
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font, OverpassMono Nerd Font, JetBrainsMono Nerd Font Mono",
	// "terminal.integrated.fontFamily": "'UbuntuSansMono NF', 'DM Mono', JuliaMono, JetBrainsMono Nerd Font Mono",
	"terminal.integrated.letterSpacing": 2, // Number of pixels to be added between charachters.
	"terminal.integrated.lineHeight": 1.2, // Line height for the terminal charachters.
	"terminal.integrated.fontSize": 12, // Fonts size of terminal charachters.
	// "terminal.integrated.fontWeight": "700", // Weight of terminals characters -- bold, normal, or number between 200 to 800.
	"terminal.integrated.fontWeight": "100", // Weight of terminals characters -- bold, normal, or number between 200 to 800.
	// Terminal Cursor Settings
	"terminal.integrated.cursorStyle": "block", // Can be block, line, underline
	"terminal.integrated.cursorWidth": 2, // Width in pixels when the cursor style is set to line
	"terminal.integrated.cursorStyleInactive": "none", // Can be outline, block, line, underline, none
