	//----------------------------------------------------//
	// Misc settings for other extensions.
	//----------------------------------------------------//
	"security.workspace.trust.untrustedFiles": "open",
	//----------------------------------------------------//
	// Other settings for other extensions.
	//----------------------------------------------------//
	//----------------------------------------------------//
	// Vim Emulation setting if used -- Install bookmark extension 
	//----------------------------------------------------//
	"vim.enableNeovim": true,
	"vim.neovimUseConfigFile": true,
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.hlsearch": true,
	"vim.insertModeKeyBindings": [
		{
			"before": [
				"i",
				"i"
			],
			"after": [
				"<Esc>"
			]
		},
	],
	"vim.normalModeKeyBindings": [
		{
			"before": [
				":"
			],
			"commands": [
				"vim.showQuickpickCmdLine",
			],
			"silent": true
		},
	],
	
	"vim.operatorPendingModeKeyBindings": [
		// {
		// 	"before": [
		// 		":"
		// 	],
		// 	"commands": [
		//     "vim.showQuickpickCmdLine",
		// 	],
		// 	"silent": true
		// },
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"leader",
				"w"
			],
			"commands": [
				"workbench.action.files.save",
			]
		},
		{
			"before": [
				"<leader>",
				"d"
			],
			"after": [
				"d",
				"d"
			]
		},
		{
			"before": [
				"<C-n>"
			],
			"commands": [
				":nohl"
			]
		},
		{
			"before": [
				"K"
			],
			"commands": [
				"lineBreakInsert"
			],
			"silent": true
		},
		{
			"before": [
				"<leader>",
				"m"
			],
			"commands": [
				"bookmarks.toggle"
			]
		},
		{
			"before": [
				"<leader>",
				"b"
			],
			"commands": [
				"bookmarks.list"
			]
		}
	],
	"vim.leader": "<space>",
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-f>": false
	},
	// To improve performance
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1,
		"asvetliakov.vscode-neovim": 1
	},
	"workbench.activityBar.location": "top",
	"vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
	"vscode-neovim.wslDistribution": "Ubuntu",
	"vscode-neovim.neovimExecutablePaths.linux": "/home/asultan/.des/dotfiles/bash/..//bin/nvim",
	"workbench.editorAssociations": {
		"*.gz": "zipViewer.GZipEdit"
	},
	"window.titleBarStyle": "custom",
	"workbench.editor.wrapTabs": true,
	"window.menuBarVisibility": "compact",
	"workbench.colorTheme": "Solarized Dark"
}
